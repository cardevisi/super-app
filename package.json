{
  "name": "super-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "workspaces": [
    "src/shared"
  ],
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "eslint .",
    "lint-fix": "eslint --fix",
    "prepare": "husky"
  },
  "jest": {
    "preset": "jest-expo",
